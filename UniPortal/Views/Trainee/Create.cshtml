@model Day2MVC.Models.Trainee

@{
    ViewData["Title"] = "Add New Trainee";
}

<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
    <div>
        <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Add New Trainee</h1>
        <p class="mt-1 text-slate-500 dark:text-slate-400">Fill in the details below to create a new trainee record.</p>
    </div>
    <a asp-action="Index" class="flex items-center justify-center gap-2 px-4 py-2 bg-white dark:bg-slate-700/50 border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-300 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
        <i data-lucide="arrow-left" class="w-5 h-5"></i>
        <span>Cancel</span>
    </a>
</div>

<div class="bg-white dark:bg-slate-800/50 rounded-xl shadow-md border border-slate-200 dark:border-slate-700/50">
    <form asp-action="Create" method="post">
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <div class="md:col-span-2">
                    <label asp-for="Name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Full Name</label>
                    <input asp-for="Name" class="w-full px-4 py-2 bg-slate-100 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="md:col-span-2">
                    <label asp-for="Address" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Address</label>
                    <input asp-for="Address" class="w-full px-4 py-2 bg-slate-100 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />
                    <span asp-validation-for="Address" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="DepartmentId" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Department</label>
                    <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))" class="w-full px-4 py-2 bg-slate-100 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="Grade" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Grade</label>
                    <input asp-for="Grade" class="w-full px-4 py-2 bg-slate-100 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />
                    <span asp-validation-for="Grade" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="md:col-span-2">
                    <label asp-for="Image" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Image URL</label>
                    <input asp-for="Image" type="text" placeholder="1.png for men , 2.png for women" class="w-full px-4 py-2 bg-slate-100 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600 focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition" />
                    <span asp-validation-for="Image" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>
        </div>

        <div class="px-6 py-4 bg-slate-50 dark:bg-slate-700/50 border-t border-slate-200 dark:border-slate-700 flex justify-end">
            <button type="submit" class="flex items-center justify-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-500/30">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
                <span>Save Trainee</span>
            </button>
        </div>
    </form>
</div>