<!DOCTYPE html>
<html lang="en" class="dark">
 <!-- Default theme is dark, can be 'light' or dynamically changed -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniPortal</title>

    <!-- Tailwind CSS for modern styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Lucide Icons for a clean icon set -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- Custom Styles and Tailwind Config -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        /* Custom scrollbar for a more modern look */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background-color: #1e293b; /* dark:bg-slate-800 */
        }

        ::-webkit-scrollbar-thumb {
            background-color: #475569; /* dark:bg-slate-600 */
            border-radius: 10px;
        }

        html.light ::-webkit-scrollbar-track {
            background-color: #f1f5f9; /* light:bg-slate-100 */
        }

        html.light ::-webkit-scrollbar-thumb {
            background-color: #cbd5e1; /* light:bg-slate-300 */
        }
    </style>
    <script>
        // Tailwind dark mode configuration
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
</head>
<body class="bg-slate-100 dark:bg-slate-900 text-slate-800 dark:text-slate-200">
    <div class="flex h-screen">
        <!-- Sidebar Navigation -->
        <aside id="sidebar" class="w-64 bg-white dark:bg-slate-800/50 backdrop-blur-lg border-r border-slate-200 dark:border-slate-700/50 flex-col flex transition-all duration-300 -translate-x-full sm:translate-x-0 fixed sm:relative z-20 h-full">
            <!-- Logo and Brand -->
            <div class="px-6 py-4 flex items-center justify-between">
                <a href="#" class="flex items-center gap-2 text-xl font-bold text-slate-800 dark:text-white">
                    <i data-lucide="graduation-cap" class="w-7 h-7 text-indigo-500"></i>
                    <span>UniPortal</span>
                </a>
            </div>

            <!-- Navigation Links -->
            <nav class="flex-grow px-4">
                <ul class="space-y-2">
                    <li>
                        <!-- For ASP.NET Core: <a asp-controller="Home" asp-action="Index" class="..."> -->
                        <a href="/Home" class="flex items-center gap-3 px-4 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 hover:text-indigo-500 dark:hover:text-white transition-colors">
                            <i data-lucide="layout-dashboard"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <!-- For ASP.NET Core: <a asp-controller="Instructor" asp-action="Index" class="..."> -->
                        <a href="/Instructor" class="flex items-center gap-3 px-4 py-2.5 rounded-lg bg-indigo-50 text-indigo-600 dark:bg-indigo-500/10 dark:text-indigo-400 font-medium">
                            <i data-lucide="user-check"></i>
                            <span>Instructors</span>
                        </a>
                    </li>
                    <li>
                        <!-- For ASP.NET Core: <a asp-controller="Trainee" asp-action="Index" class="..."> -->
                        <a href="/Trainee" class="flex items-center gap-3 px-4 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 hover:text-indigo-500 dark:hover:text-white transition-colors">
                            <i data-lucide="users"></i>
                            <span>Trainees</span>
                        </a>
                    </li>
                    <li>
                        <!-- For ASP.NET Core: <a asp-controller="Course" asp-action="Details" class="..."> -->
                        <a href="/Course/Details" class="flex items-center gap-3 px-4 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 hover:text-indigo-500 dark:hover:text-white transition-colors">
                            <i data-lucide="book-marked"></i>
                            <span>Courses</span>
                        </a>
                    </li>
                    <li>
                        <!-- Let's add a placeholder for Results -->
                        <a href="#" class="flex items-center gap-3 px-4 py-2.5 rounded-lg text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 hover:text-indigo-500 dark:hover:text-white transition-colors">
                            <i data-lucide="file-text"></i>
                            <span>Results</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Footer of Sidebar -->
            <div class="p-6">
                <div class="flex items-center justify-between p-3 rounded-lg bg-slate-100 dark:bg-slate-900/50">
                    <span class="text-sm font-medium">Theme</span>
                    <div class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" id="theme-toggle" class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-200 dark:bg-slate-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-slate-600 peer-checked:bg-indigo-600"></div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header for main content -->
            <header class="bg-white/50 dark:bg-slate-800/50 backdrop-blur-lg border-b border-slate-200 dark:border-slate-700/50">
                <div class="flex items-center justify-between h-16 px-4 sm:px-6">
                    <!-- Mobile Menu Toggle -->
                    <button id="menu-toggle" class="sm:hidden p-2 rounded-md text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-700">
                        <i data-lucide="menu"></i>
                    </button>
                    <!-- Search Bar -->
                    <div class="hidden sm:block">
                        <div class="relative">
                            <i data-lucide="search" class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400"></i>
                            <input type="text" placeholder="Search..." class="pl-10 pr-4 py-2 w-72 bg-slate-100 dark:bg-slate-700/50 rounded-lg border border-transparent focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition">
                        </div>
                    </div>

                    <!-- User Profile Dropdown -->
                    <div class="flex items-center gap-4">
                        <button class="p-2 rounded-full text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-700">
                            <i data-lucide="bell"></i>
                        </button>
                        <div class="relative">
                            <img src="https://placehold.co/40x40/6366f1/ffffff?text=U" alt="User Avatar" class="w-10 h-10 rounded-full cursor-pointer">
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main render body -->
            <main role="main" class="flex-1 overflow-y-auto p-4 sm:p-6">
                <!-- This is where @RenderBody() from your original file goes -->
                <!-- I'm adding some placeholder content to show you the look and feel -->
                <div class="max-w-7xl mx-auto">
                    <h1 class="text-3xl font-bold mb-6">@ViewData["Title"]</h1>
                    <div class="bg-white dark:bg-slate-800/50 p-6 rounded-xl shadow-md border border-slate-200 dark:border-slate-700/50">
                        <p>Your main page content will be rendered here.</p>
                        <p class="mt-2 text-slate-500 dark:text-slate-400">This is a sample container to demonstrate how the content area will look inside the new layout.</p>
                    </div>
                </div>
            </main>

            <!-- Footer for main content -->
            <footer class="p-4 text-center text-sm text-slate-500 dark:text-slate-400 border-t border-slate-200 dark:border-slate-700/50">
                &copy; 2025 - UniPortal -
                <!-- For ASP.NET Core: <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
                <a href="#" class="text-indigo-500 hover:underline">Privacy</a>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // We wrap our scripts in a DOMContentLoaded event listener.
        // This ensures that the HTML page is fully loaded before the script tries to find elements.
        // This is a robust way to prevent errors where scripts run too early, which was likely causing the icons to not appear.
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Lucide Icons
            lucide.createIcons();

            const themeToggle = document.getElementById('theme-toggle');
            const htmlEl = document.documentElement;

            // Function to set theme
            const setTheme = (theme) => {
                if (theme === 'dark') {
                    htmlEl.classList.add('dark');
                    themeToggle.checked = true;
                } else {
                    htmlEl.classList.remove('dark');
                    themeToggle.checked = false;
                }
                localStorage.setItem('theme', theme);
            };

            // Event listener for theme toggle
            themeToggle.addEventListener('change', () => {
                setTheme(themeToggle.checked ? 'dark' : 'light');
            });

            // Load theme from localStorage on page load
            const storedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            setTheme(storedTheme);

            // Mobile sidebar toggle
            const menuToggle = document.getElementById('menu-toggle');
            const sidebar = document.getElementById('sidebar');

            menuToggle.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });
        });

        // This is where @await RenderSectionAsync("Scripts", required: false) would go
    </script>
</body>
</html>

